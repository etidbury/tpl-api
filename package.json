{
  "name": "tpl-api",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "10.x.x"
  },
  "scripts": {
    "build": "npm run build:reset && $(npm bin)/babel -d ./.build.routes ./routes",
    "build:reset": "rm -rf .build*",
    "deploy": "yarn build:reset && yarn build && now",
    "flow": "$(npm bin)/flow",
    "eslint": "$(npm bin)/eslint --max-warnings 300 ./",
    "setup": "tidil setup --tpl api",
    "start": "NODE_ENV=production node index.js",
    "test": "$(npm bin)/jest",
    "test:dev": "NODE_ENV=test node index.js",
    "test:watch": "$(npm bin)/jest --watch --runInBand",
    "test:ci": "npm run flow && npm run eslint && npm run test",
    "dev": "$(npm bin)/babel-node index.js",
    "watch": "nodemon --config $(npm root)/tpl-api-helpers/config/nodemon.json --exec babel-node index.js",
    "prod": "npm start",
    "db:drop:create": "node -r dotenv/config $(npm bin)/sequelize db:drop ; node -r dotenv/config $(npm bin)/sequelize db:create",
    "db:migrate:force": "npm run db:drop:create && node -r dotenv/config $(npm bin)/sequelize db:migrate",
    "db:drop": "node -r dotenv/config $(npm bin)/sequelize db:drop",
    "db:migrate:undo": "node -r dotenv/config $(npm bin)/sequelize db:migrate:undo:all",
    "db:seed": "node -r dotenv/config $(npm bin)/sequelize db:seed:all",
    "db:seed:undo": "node -r dotenv/config $(npm bin)/sequelize db:seed:undo:all",
    "docker": "npm run docker:build && npm run docker:run",
    "docker:build": "docker build -t \"$(echo $npm_package_name)\" -f $(npm root)/tpl-api-helpers/config/Dockerfile .",
    "docker:run": "docker run -p 4001:80 $(echo $npm_package_name):latest",
    "docker:mysql": "docker stop local-mysql-server ; docker rm local-mysql-server ; docker run --name local-mysql-server -p 3306:3306 -e MYSQL_ALLOW_EMPTY_PASSWORD=true -e MYSQL_DATABASE=db_$(echo $npm_package_name) -e MYSQL_ROOT_HOST=% -d mysql/mysql-server:5.7 --character-set-server=utf8mb4 --collation-server=utf8mb4_unicode_ci"
  },
  "dependencies": {
    "axios": "0.18.0",
    "babel-polyfill": "^6.26.0",
    "cors": "2.8.4",
    "dotenv": "^6.1.0",
    "fastify": "1.9.0",
    "fastify-blipp": "1.2.1",
    "fastify-compress": "0.6.0",
    "fastify-formbody": "2.0.1",
    "fastify-helmet": "1.0.3",
    "fastify-multipart": "0.5.1",
    "fastify-no-icon": "^2.0.0",
    "fastify-sensible": "0.2.0",
    "tpl-api-helpers": "^0.3.4",
    "url-join": "4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "3.1.1",
    "chai": "^4.2.0",
    "eslint": "5.3.0",
    "eslint-cli": "^1.1.1",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-promise": "3.8.0",
    "flow-bin": "0.75.0",
    "jest": "22.4.3",
    "regenerator-runtime": "^0.12.1",
    "sequelize-cli": "4.0.0"
  }
}
